<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/typeTv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="16dp"
                android:text="类型"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/typeEt"
                app:layout_constraintTop_toBottomOf="@+id/typeTv"
                android:layout_margin="16dp"
                android:hint="请输入类型"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/titleTv"
                app:layout_constraintTop_toBottomOf="@+id/typeEt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="16dp"
                android:text="标题"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/titleEt"
                app:layout_constraintTop_toBottomOf="@+id/titleTv"
                android:layout_margin="16dp"
                android:hint="请输入标题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/contentTv"
                app:layout_constraintTop_toBottomOf="@+id/titleEt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="16dp"
                android:text="简介"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/contentEt"
                app:layout_constraintTop_toBottomOf="@+id/contentTv"
                android:layout_margin="16dp"
                android:hint="请输入简介"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/picTv"
                app:layout_constraintTop_toBottomOf="@+id/contentEt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="16dp"
                android:text="封面"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/picEt"
                app:layout_constraintTop_toBottomOf="@+id/picTv"
                android:layout_margin="16dp"
                android:hint="请输入封面 url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/logoTv"
                app:layout_constraintTop_toBottomOf="@+id/picEt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="16dp"
                android:text="logo"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/logoEt"
                app:layout_constraintTop_toBottomOf="@+id/logoTv"
                android:layout_margin="16dp"
                android:hint="请输入logo url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveBtn"
                android:text="保存"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/logoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>